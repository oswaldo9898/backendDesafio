<div class=" d-flex flex-column justify-content-center align-items-center">

    <form id="registerForm" class="col-5 container py-5 h-100">

        <h2 class="fw-bold mb-2 text-uppercase">Crear nueva Cuenta</h2>
        <p class="text-black-50 mb-2">¡Por favor, introduce tu usuario y contraseña!</p>
        <div class="form-outline mb-1">
            <input type="text" id="first_name" class="form-control" name="first_name" />
            <label class="form-label" for="first_name">Nombre</label>
        </div>
        <div class="form-outline mb-1">
            <input type="text" id="last_name" class="form-control" name="last_name" />
            <label class="form-label" for="last_name">Apellido</label>
        </div>
        <div class="form-outline mb-1">
            <input type="number" id="age" class="form-control" name="age" />
            <label class="form-label" for="age">Edad</label>
        </div>
        <!-- Email input -->
        <div class="form-outline mb-1">
            <input type="email" id="email" class="form-control" name="email" />
            <label class="form-label" for="email">Correo electrónico</label>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-2">
            <input type="password" id="password" class="form-control" name="password" />
            <label class="form-label" for="password">Contraseña</label>
        </div>

        <div class="d-grid mb-2">
            <!-- Submit button -->
            <input type="submit" class="btn btn-primary" value="Iniciar sesión" />
        </div>

        <!-- Register buttons -->
        <div class="text-center">
            <p class="mb-1">¿Ya tiene cuenta? <a href="/login">Iniciar sesión</a></p>
        </div>
    </form>
</div>

<script src="/js/register.js"></script>