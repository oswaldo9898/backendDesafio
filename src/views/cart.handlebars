<div class='cartList'>
    <input type="text" value="{{user.cart}}" id="cartId"/>
    <div class="detalleProducto">
        <div class='tablaProducts'>
            <div class='tituloTabla'>
                <div class='tablaProducto'>Producto</div>
                <div class='tablaPrecio'>Precio</div>
                <div class='tablaCantidad'>Cantidad</div>
            </div>
            {{#each productsCart}}
            <div key={{this.product._id}} class="cartProduct">
                <button class="centrarContenido deleteProduct" onclick="eliminarProducto('{{this.product._id}}')">
                    <i class="fa-solid fa-trash" title="Eliminar producto"></i>
                </button>
                <div class="imgProductCart centrarContenido">
                    <img src={{this.product.portada}} alt='Producto' />
                </div>
                <div class="titleProductCart centrarContenido">
                    <a href={'/producto/{{this.product._id}}'}>{{this.product.title}}</a>
                </div>
                <div class="priceProductCart centrarContenido">
                    {{this.product.price}}
                </div>
                <div class="CantidadProductCart centrarContenido">
                    {{this.quantify}}
                </div>
                {{!-- <div class="totalProductCart centrarContenido">
                    {{this.product.price * this.quantify}}
                </div> --}}
            </div>
            {{/each}}
            <div class="total-pagar">

            </div>
        </div>
    </div>
    <div class="pago">
        <h3>Datos del cliente</h3>
        <label for="">Nombre completo</label>
        <input type="text" value="{{user.first_name}} {{user.last_name}}" disabled>
        <label for="">Correo electronico</label>
        <input type="text" value="{{user.email}}" id="emailUser" disabled>
        <button class="boton-pagar">Realizar Pago</button>
    </div>
</div>

<script src="/js/cart.js"></script>