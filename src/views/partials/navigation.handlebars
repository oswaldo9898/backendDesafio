<link rel="stylesheet" href="../../css/navigation.css">

<nav class="navbar navbar-expand-lg bg-body-tertiary bg-dark" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Anime Shop</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
      aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item">
          {{#if user}}
          <a href="/productos" class="nav-link active colot-text" aria-current="page">TIENDA</a>
          {{/if }}
        </li>
      </ul>
      <ul class="nav w-100 justify-content-end">
        {{#ifeq user.role 'user'}}
        <li class="nav-item">
          <a class="nav-link" href="/carts/{{user.cart}}">
            <img src="../../assets/cart-shop.png" alt="Bootstrap" width="40" height="40">
          </a>
        </li>
        {{/ifeq}}
        {{#ifeq user.role 'admin'}}
        <li class="nav-item">
          <a class="nav-link colot-text" href="/administrar">
            <i class="fa-solid fa-gear"></i>
            Administración
          </a>
        </li>
        {{/ifeq}}
        <li class="nav-item dropdown ">
          <a class="nav-link dropdown-toggle colot-text" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Hola {{user.first_name}} {{user.last_name}}
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item colot-text" href="#">Rol: {{user.role}}</a></li>
            <li><a class="dropdown-item colot-text" href="/api/sessions/logout">Salir</a></li>
          </ul>
        </li>
      </ul>

    </div>
  </div>
</nav>








